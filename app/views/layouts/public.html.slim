doctype html
html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    title BOOKER.ka
    meta content="width=device-width,initial-scale=1" name="viewport" /
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
  body
    = render 'shared/header'
    = render 'shared/messages'
    .wrapper.flex-grow-1
      .container-fluid.d-flex.flex-column.hero.light-brown
        .container.text-left
          h1.display-1 = t('welcome_pages.welcome.title')
          h2.mb-4 = t('welcome_pages.welcome.subtitle')
      .container.d-flex.justify-content-end.mb-4
        ul.nav
          = render 'shared/language_switcher'
      = yield
    .container
      = render 'shared/footer'
